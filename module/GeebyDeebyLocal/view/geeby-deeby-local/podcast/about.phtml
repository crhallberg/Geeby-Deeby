<? $this->headTitle('Podcast - '); ?>
<? if (!$details): ?>
  <h1>Not found</h1>
  <p>The episode you requested does not exist.</p>
<? else: ?>
  <h1><?=$this->escapeHtml($details['title'])?></h1>

  <p><?=$this->escapeHtml($details['description'])?></p>

  <p>Released on <?=date('M d, Y', strtotime($details['date']))?>.</p>

  <p>Download: <a href="<?=$this->url('home')?>mp3/<?=$this->escapeHtml($details['filename'])?>">MP3</a> (Duration: <?=$this->escapeHtml($details['duration'])?>)</p>

  <? if ($prev): ?>
    <p>Previous episode: <a href="<?=$this->url('podcast-about')?>?file=<?=urlencode($prev['filename'])?>"><?=$this->escapeHtml($prev['title'])?></a></p>
  <? endif; ?>
  <? if ($next): ?>
    <p>Next episode: <a href="<?=$this->url('podcast-about')?>?file=<?=urlencode($next['filename'])?>"><?=$this->escapeHtml($next['title'])?></a></p>
  <? endif; ?>
<? endif; ?>